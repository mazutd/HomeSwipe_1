<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loggain"
    tools:context=".Intro.RegisteringActivity"
    android:fitsSystemWindows="true"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:text="Hitta ditt nästa hem idag !"
        android:textColor="@android:color/white"
        app:fontFamily="@font/ubuntu" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="292dp"
        android:background="@mipmap/input"
        android:hint="Användarnamn"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:singleLine="true">

        <requestFocus />
    </EditText>


    <EditText
        android:id="@+id/passwordID"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="229dp"
        android:background="@mipmap/input"
        android:hint="Lösenord"
        android:inputType="textWebPassword"
        android:paddingLeft="20dp"
        android:singleLine="true">


    </EditText>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="621dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:background="@mipmap/btninput"
        android:text="LOGGA IN"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="495dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="93dp"
        android:foregroundGravity="center"
        app:srcCompat="@mipmap/logo" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginBottom="13dp"
        android:paddingBottom="20dp"
        android:text="Inget kontot än  ? "
        android:textColor="#AFAFAF"
        app:fontFamily="@font/ubuntu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="343dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Logga in för att hitta"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:fontFamily="@font/ubuntu" />

    <TextView
        android:id="@+id/registeraTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="20dp"
        android:text="Registera dig"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontFamily="@font/ubuntu" />
</RelativeLayout>