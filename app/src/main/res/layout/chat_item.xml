<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    >
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.jackandphantom.circularimageview.CircleImage
            android:id="@+id/imageView2Sender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_weight="3"
            android:src="@mipmap/userimg" />
        <TextView
            android:id="@+id/meddelandeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/chatshaperight"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:text="Hello this is me!!"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_toEndOf="@+id/imageView2Sender"

            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/imageView2Sender" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        >


        <TextView
            android:id="@+id/MeddelandeMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"

            android:layout_toEndOf="@+id/imageView3MyImage"
            android:layout_toRightOf="@+id/imageView3MyImage"
            android:layout_weight="6"
            android:background="@drawable/chatshape"
            android:elevation="2dp"
            android:padding="16dp"
            android:text="Hi!! How are you!!"
            android:textColor="#fff"
            android:textSize="16sp" />

        <com.jackandphantom.circularimageview.CircleImage
            android:id="@+id/imageView3MyImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_weight="3"
            android:src="@mipmap/nophoto" />
    </LinearLayout>
</RelativeLayout>